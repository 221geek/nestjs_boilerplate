KAFKA_CONNECTION_TIMEOUT=3000
KAFKA_RETRY_DELAY=100
KAFKA_RETRY_ATTEMPTS=3

# Keycloak
KEYCLOAK_AUTH_SERVER_URL=http://localhost:8080
